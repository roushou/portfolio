---
import { siteConfig } from "../config";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="author" content={siteConfig.author} />
    <meta name="description" content={siteConfig.description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="preload" href="/fonts/AnalogueOS.ttf" as="font" type="font/ttf" crossorigin />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:title" content={siteConfig.title} />
    <meta property="og:description" content={siteConfig.description} />
    <meta property="og:image" content={siteConfig.previewImage} />
    <meta property="og:url" content={siteConfig.url} />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={siteConfig.title} />
    <meta name="twitter:description" content={siteConfig.description} />
    <meta name="twitter:image" content={siteConfig.previewImage} />
    <meta name="twitter:url" content={siteConfig.url} />
		<title>{title}</title>
  </head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
  html {
    font-family: "AnalogueOS", sans-serif;
  }

  body {
    color: white;
    background-color: black;
    background-image: radial-gradient(#1a1a1a 1px, transparent 1px),
      radial-gradient(#313131 1px, transparent 1px);
    background-position: 0 0, 0 0;
    background-size: 0.5em 0.5em;
    background-repeat: repeat;
  }

  @font-face {
    font-family: "AnalogueOS";
    src: url("/fonts/AnalogueOS.ttf") format("truetype");
    font-weight: normal;
    font-style: normal;
    font-display: fallback;
  }

  @font-face {
    font-family: "Nunito";
    src: url("/fonts/Nunito.ttf") format("truetype");
    font-weight: normal;
    font-style: normal;
    font-display: fallback;
  }
</style>
